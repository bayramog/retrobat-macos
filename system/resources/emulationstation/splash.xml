<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  <variables>
    <baseColor>d4af37</baseColor>
    <gradientEndColor>9c7c19</gradientEndColor>
  </variables>

  <view name="splash">
    
    <image name="background_gradient" extra="true">
      <tile>true</tile>
      <pos>0 0</pos>
      <size>1 1</size>
      <origin>0 0</origin>
      
      <path>./white.png</path>
      
      <color>356666FF</color>
      
      <colorEnd>041C21FF</colorEnd>
      
      <zIndex>0</zIndex>
    </image>

    <image name="background">
      <pos>0.5 0.45</pos>
      <origin>0.5 0.5</origin>
      <linearSmooth>true</linearSmooth>
      <maxSize>0.65 0.65</maxSize>
      <path>./splash_retrobat.svg</path>
      <zIndex>30</zIndex>
    </image>

    <image name="progressbar">
      <origin>0 0</origin>
      <pos>0.25 0.87</pos>
      <size>0.5 0.036</size>
      <color>6060607F</color>
      <colorEnd>6060607F</colorEnd>
      <roundCorners>0.01</roundCorners>
      <zIndex>20</zIndex>
    </image>

    <image name="progressbar:active">
      <tile>true</tile>
      <path>./progress.png</path>
      <color>${baseColor}</color>
      <colorEnd>${gradientEndColor}</colorEnd>
      <zIndex>21</zIndex>
    </image>

<text name="label">
      <color>FFFFFFCC</color> <fontPath>./DroidSansFallbackFull</fontPath> <fontSize>0.035</fontSize>
      <pos>0.5 0.80</pos> <origin>0.5 0.5</origin>
      <alignment>center</alignment>
      <glowColor>356666FF</glowColor>
      <glowSize>2</glowSize>
      <zIndex>40</zIndex>
    </text>

  </view>
</theme>